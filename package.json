{
  "name": "mazai-pc",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "app.js",
  "scripts": {
    "precommit": "npm run lint-staged",
    "dev": "concurrently \"npm:node-dev\" \"npm:sassc-dev\"",
    "node-dev": "cross-env NODE_ENV=development nodemon ./app.js --exec babel-node",
    "sassc-dev": "cross-env NODE_ENV=development babel-node scripts/build-sass.js",
    "sassc": "babel-node scripts/build-sass.js",
    "clean": "babel-node scripts/clean-build.js target=./dist",
    "build": "npm run clean && npm run build-server && npm run sassc && npm run build-client",
    "build-server": "babel ./ -d dist --ignore node_modules,views,scripts,*.config.js",
    "build-client": "cross-env NODE_ENV=production babel-node ./scripts/build.js target=./dist",
    "start": "pm2 start ecosystem.config.js --env production",
    "delete": "pm2 delete mazai-pc",
    "lint": "eslint --ext .js,.vue app.js views controllers && npm run lint-style",
    "lint:fix": "eslint --fix --ext .js,.vue app.js views controllers && npm run lint-style:fix",
    "lint-style": "stylelint views/**/*.{scss,vue} --syntax scss",
    "lint-style:fix": "stylelint views/**/*.{scss,vue} --syntax scss --fix",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write views/**/*.{js,scss,vue} controllers/**/*.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "MNW-FE",
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "autoprefixer": "^9.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "blueimp-md5": "^2.10.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^4.7.1",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.2.0",
    "prettier": "^1.14.3",
    "sass": "^1.14.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.7.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "art-template": "^4.13.1",
    "babel-runtime": "^6.26.0",
    "chokidar": "^2.0.4",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "express-art-template": "^1.0.1",
    "log4js": "^3.0.6",
    "pm2": "^3.2.2",
    "pm2-intercom": "^1.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "vue": "^2.5.17",
    "webpack": "^4.23.1"
  },
  "lint-staged": {
    "**/*.{js,vue,scss}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,vue}": "eslint --ext .js,.vue",
    "**/*.{scss,vue}": "stylelint --syntax scss"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "not ie <= 8"
  ],
  "nodemonignore": [
    "./views/**/*.js", 
    "!./views/**/art-es6.js",
    "!./views/**/vue-entry.js"
  ]
}
