{
  "name": "mazai-pc",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "app.js",
  "scripts": {
    "precommit": "npm run lint-staged",
    "dev": "concurrently \"npm:node-dev\" \"npm:sassc-dev\"",
    "node-dev": "nodemon ./app.js env=development --exec babel-node",
    "sassc-dev": "babel-node scripts/build-sass.js env=development",
    "sassc": "babel-node scripts/build-sass.js",
    "clean": "babel-node scripts/clean-build.js target=./dist",
    "build": "npm run clean && npm run build-server && npm run sassc && npm run build-client",
    "build-server": "babel ./ -d dist --ignore node_modules,views,scripts,postcss.config.js",
    "build-client": "NODE_ENV=production babel-node ./scripts/build.js target=./dist",
    "start": "pm2 start ./dist/app.js --name mazai-pc",
    "delete": "pm2 delete mazai-pc",
    "lint": "eslint --ext .js,.vue app.js views scripts middlewares controllers",
    "lint:fix": "eslint --fix --ext .js,.vue app.js views scripts middlewares controllers",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.vue app.js views scripts middlewares controllers",
    "prettier": "prettier --write ./views/**/*.js ./controllers/**/*.js ./views/**/*.vue",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "MNW-FE",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "blueimp-md5": "^2.10.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^4.7.1",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "gulp": "^3.9.1",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.2.0",
    "prettier": "^1.14.3",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass": "^1.14.3",
    "sass-loader": "^7.1.0",
    "url-loader": "^1.1.2",
    "vue": "^2.5.17",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "art-template": "^4.13.1",
    "chokidar": "^2.0.4",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "express-art-template": "^1.0.1",
    "pm2": "^3.2.2"
  },
  "lint-staged": {
    "**/*.{js,vue,scss}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{vue,js}": "npm run lint-staged:js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
